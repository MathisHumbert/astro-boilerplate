---
interface Props {
  title: string;
  subtitle: string;
  text: string;
}

const { title, subtitle, text } = Astro.props;
---

<section class="w-full flex flex-col gap-96 justify-between p-grid">
  <h2
    class="text-heading [&>div_div]:-mb-2 [&>div_div]:pb-2"
    data-animation="text"
    data-delay="0.1"
  >
    {title}
  </h2>
  <div class="flex flex-col gap-[1.2rem] ml-col-6-gap w-col-4">
    <h4 class="text-l">{subtitle}</h4>
    <p class="text-s">{text}</p>
  </div>
</section>
